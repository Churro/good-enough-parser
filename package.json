{
  "name": "@renovate/parser-utils",
  "version": "0.0.0-dripip",
  "repository": "git@github.com:renovatebot/parser-utils.git",
  "author": "Sergei Zharinov",
  "contributors": [
    "Jason Kuhrt"
  ],
  "license": "MIT",
  "files": [
    "dist-cjs",
    "dist-esm"
  ],
  "exports": {
    ".": {
      "require": "./dist-cjs/index.js",
      "import": "./dist-esm/index.js"
    }
  },
  "main": "./dist-cjs/index.js",
  "module": "./dist-esm/index.js",
  "scripts": {
    "ts-node": "ts-node --project tsconfig.ts-node.json",
    "lint": "run-s lint:*",
    "lint:types": "tsc --noEmit",
    "lint:eslint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:imports": "format-imports --check lib test",
    "lint:prettier": "prettier --check .",
    "fix": "run-s fix:format fix:eslint",
    "fix:format": "run-s fix:prettier fix:imports",
    "fix:imports": "format-imports lib && format-imports test",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "eslint . --ext .ts,.tsx --fix",
    "dev": "run-p dev:*",
    "dev:coverage": "http-server ./coverage/lcov-report",
    "build": "run-s clean build:*",
    "build:cjs": "ttsc --project tsconfig.cjs.json",
    "build:esm": "ttsc --project tsconfig.esm.json",
    "test": "run-s lint test:*",
    "test:unit": "jest",
    "clean": "rm -rf dist-cjs dist-esm node_modules/.cache coverage",
    "release:pr": "dripip pr",
    "release:canary": "dripip preview",
    "release:stable": "dripip stable",
    "prepare:husky": "husky install",
    "prepublishOnly": "yarn -s build"
  },
  "dependencies": {
    "@types/moo": "0.5.5",
    "moo": "0.5.1"
  },
  "devDependencies": {
    "@homer0/prettier-plugin-jsdoc": "4.0.1",
    "@renovate/eslint-plugin": "https://github.com/renovatebot/eslint-plugin#main",
    "@types/jest": "26.0.24",
    "@types/node": "16.4.7",
    "@types/ts-nameof": "4.2.1",
    "@typescript-eslint/eslint-plugin": "4.28.5",
    "@typescript-eslint/parser": "4.28.5",
    "dripip": "0.10.0",
    "eslint": "7.31.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-only-warn": "1.0.3",
    "format-imports": "2.4.1",
    "http-server": "13.0.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "jest-watch-select-projects": "2.0.0",
    "jest-watch-suspend": "1.1.2",
    "jest-watch-typeahead": "0.6.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "pretty-quick": "3.1.1",
    "ts-jest": "27.0.4",
    "ts-nameof": "5.0.0",
    "ts-node": "10.1.0",
    "ttypescript": "1.5.12",
    "typescript": "4.3.5",
    "typescript-snapshots-plugin": "1.7.0",
    "typescript-transform-paths": "3.1.0",
    "upath": "2.0.1"
  },
  "importSorter": {
    "emptyLinesBetweenGroups": 0,
    "wrappingStyle": "prettier"
  },
  "resolutions": {
    "comment-parser": "1.1.5"
  }
}
